<form>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="nombre">Nombre</label>
            <input type="text" class="form-control" id="nombre" value="<%=@profile.nombre%>">
        </div>
        <div class="form-group col-md-6">
            <label for="apellido">Apellido</label>
            <input type="text" class="form-control" id="apellido" value="<%=@profile.apellido%>">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="tipo">Tipo de Usuario</label>
            <input type="text" class="form-control" id="tipo" value="<%=@profile.tipo%>">
        </div>
    </div>
    <%=link_to "Editar perfil", edit_profile_path(@profile), {class: "btn btn-info"} %>
</form>