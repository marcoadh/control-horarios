<%= form_with model: @profile do |f| %>
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label :nombre %>
      <%= f.text_field :nombre, class: "form-control" %>
    </div>
    <div class="form-group col-md-6">
    <%= f.label :apellido%>
    <%= f.text_field :apellido, class: "form-control" %>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-4">
        <%= f.label :tipo, "Tipo de Usuario"%>
        <%= f.text_field :tipo, class: "form-control" %>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-2">
        <%= f.submit "Actualizar", class: "btn btn-warning form-control" %>
    </div>
  </div>
<% end %>