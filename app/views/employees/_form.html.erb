<%= form_for @empleado, remote: true do |f| %>

    <div class="item form-group<%= @empleado.errors[:nombre].any? ? ' has-error has-feedback' : '' %>">
      <%= f.label :nombre, "Nombre: " %>
      <div class="input-group">
        <%= f.text_field :nombre, {:class=> "form-control"} %>        
        <%if @empleado.errors[:nombre].any? %>
          <p class="bg-danger"><%= @empleado.errors[:nombre].to_s[/\w([^"]*)/] %></p>
        <% end %>
      </div>
    </div>

    <div class="item form-group<%= @empleado.errors[:apellido].any? ? ' has-error has-feedback' : '' %>">
      <%= f.label :apellido, "Apellido: " %>
      <div class="input-group">
        <%= f.text_field :apellido, {:class=> "form-control"} %>        
        <%if @empleado.errors[:apellido].any? %>
          <p class="bg-danger"><%= @empleado.errors[:apellido].to_s[/\w([^"]*)/] %></p>
        <% end %>
      </div>
    </div>

    <div class="actions col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
      <%= f.submit @empleado.new_record? ? "Crear Empleado" : "Actualizar Empleado", :class => "btn btn-success"%>
    </div>  
<% end %>